@model IEnumerable<PsychologyTest.Models.Grupo>

@{
    ViewData["Title"] = "Administrar grupos";
}

@section UserActions{
    <ul class="nav navbar-nav">
        @if (@ViewBag.UserRol == "Root")
        {
            <li><a asp-area="" asp-controller="Root" asp-action="UsersManage">Usuarios</a> </li>
        }
        <li><a asp-area="" asp-controller="Admin" asp-action="InstitutionsManage">Instituciones</a></li>
        <li class="active"><a asp-area="" asp-controller="Admin" asp-action="GroupsManage">Grupos</a></li>
        <li><a asp-area="" asp-controller="Admin" asp-action="TestManage">Test</a></li>
    </ul>
}

<div>
    <div class="page-header">
        <h1>Administracion de Grupos</h1>
    </div>
    <div class="row">
        <div class="col col-md-4 col-lg-3">
            <div class="form-group">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Buscar" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Ir</button>
                    </span>
                </div>
            </div>
        </div>
        <div class="col col-md-2 col-lg-1">
            <a asp-area="" asp-controller="Admin" asp-action="CreateGrupo" class="btn btn-success">Agregar nuevo grupo</a>
        </div>
    </div>

    <hr />
    
    <div class="panel panel-primary">
        <div class="panel-heading">Grupos</div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Grado</th>
                    <th>Jornada</th>
                    <th>Institucion</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var grupo in Model) {
                <tr>
                    <td>@grupo.Nombre</td>
                    <td>@grupo.Grado</td>
                    <td>@grupo.Jornada</td>
                    <td>@grupo.Institucion.Nombre</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>