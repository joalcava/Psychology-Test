@model PsychologyTest.ViewModels.AuthViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reestablecer contraseña";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2>Reestablecer contraseña</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="form-horizontal" method="post">
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <fieldset>
                    <legend>Ingrese una nueva contraseña</legend>

                    @if (ViewBag.Success) {
                        <div class="alert alert-dismissible alert-success">
                            <button class="close" type="button" data-dismiss="alert">&times;</button>
                            <h4>Listo!</h4>
                            Su contraseña se cambio correctamente.
                        </div>
                    }

                    @if (ViewData.ModelState[""] != null) {
                        <div class="alert alert-dismissible alert-warning">
                            <button class="close" type="button" data-dismiss="alert">&times;</button>
                            <h4>Atencion:</h4>
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-group-justified" type="submit">Enviar</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
