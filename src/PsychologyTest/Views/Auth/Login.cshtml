@model PsychologyTest.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Inicio de sesion";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


<div class="row">
    <div class="col-md-5 col-md-offset-4">
        <div class="jumbotron">
            <h3>Inicio de sesion</h3>
            <form class="form-horizontal" method="post" novalidate>
                <div asp-validation-summary="ModelOnly"></div>
                
                @try{
                    if(ViewBag.IntentoFallido){
                        <div class="alert alert-dismissible alert-info">
                            <button class="close" type="button" data-dismiss="alert">&times;</button>
                            Olvido su contraseña? No se preocupe, haga click<a asp-controller="Auth" asp-action="ForgotPassword" class="alert-link"> aqui</a>, y solicite una nueva.
                        </div>
                    }
                }
                catch(NullReferenceException) { }

                <div class="form-group">
                    <input asp-for="Username" class="form-control lastpassClearHidden" id="inputEmail" type="email" placeholder="Email" autocomplete="off">
                    <span  asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control lastpassClearHidden" id="inputPassword" type="password" placeholder="Password" autocomplete="off">
                    <span asp-validation-for="Password"></span>
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" type="checkbox"> Recuerdame
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-group-justified" type="submit">Iniciar sesion</button>
                </div>
            </form>
        </div>
    </div>
</div>